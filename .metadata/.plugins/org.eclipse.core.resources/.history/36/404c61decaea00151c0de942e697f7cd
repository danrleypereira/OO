import java.text.DecimalFormat;
import java.util.Scanner;


public class PercentualSobrePiso {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner ler = new Scanner(System.in);
		final int PISO_SALARIAL = 1000;
		DecimalFormat mascara = new DecimalFormat("0.00");
		int valorInserido;
		float percentual = 0f;
		
		System.out.println("Qual é o valor percentual a ser calculado sobre o piso " +
				"salarial?");
		
		valorInserido = ler.nextInt();
		System.out.println("valorInserido" + valorInserido);
		percentual = (valorInserido/100.0) * PISO_SALARIAL;
		System.out.println("percentual = " + percentual);
		
		System.out.println("O percentual é: " + percentual);
		
	}

}
