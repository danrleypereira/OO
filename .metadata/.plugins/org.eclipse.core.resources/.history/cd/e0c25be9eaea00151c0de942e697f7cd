package aula2;

import java.util.Scanner;

public class PesoElefantes {

	public static void main(String[] args) {
		
		float[] pesoElefantes = new float[3];
		
		for(int i= 0; i<3; i++){
			pesoElefantes[i] = atribuiPeso();
		
		}
	}
	
	public static float atribuiPeso(){
		Scanner ler = new Scanner(System.in);
		float peso;
		do{
			peso = ler.nextFloat();
		}while( (peso < 5) && !( peso.isFloat() ) );
		return peso;
		
	}

}
